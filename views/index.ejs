<!DOCTYPE html>
<html lang="en">
  <%- include('layout'); %>
  <body>
    <header>
      <ul>
        <li><a href="https://ancorestrategy.com/">Ancore Strategy</a></li>
        <li><a href="mailto:tristan.varewijck@gmail.com">Get your Card</a></li>
      </ul>

      <!-- background lines -->
      <div class="lines">
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
        <div class="line"></div>
      </div>
    </header>

    <main class="card-wrapper">
      <div class="card">
        <div class="card-header">
          <div class="img-container">
            <img src="<%= member.profileImg %>" alt="profile-picture" />
          </div>

          <div class="name-group">
            <h1>
              <%= member.name %> <br />
              <%= member.lastName %>
            </h1>
            <p><%= member.description %></p>
          </div>
        </div>

        <div class="button-group">
          <button
            class="share"
            name="http://localhost:5000/<%= member.id %>"
            value="http://localhost:5000/<%= member.id %>"
          >
            Copy Contact
          </button>
          <a class="e-mail" href="mailto:<%= member.email %>">E-mail</a>
        </div>

        <div class="about">
          <h2>About</h2>
          <p><%= member.about %></p>
        </div>

        <div class="socials">
          <h2>Socials</h2>
          <ul class="socials-list">
            <% member.socials.forEach(function(social) { %>
            <li>
              <a href="<%= social.link %>"
                ><img src="<%= social.icon %>" alt="<%= social.social %>-icon"
              /></a>
            </li>
            <% }); %>
          </ul>
        </div>

        <div class="company">
          <h2>Companys</h2>
          <ul class="company-list">
            <% member.companys.forEach(function(company) { %>

            <li>
              <a href="<%= company.link %>">
                <div class="logo-container">
                  <img
                    src="<%= company.logo %>"
                    alt="<%= company.name %>-logo"
                  />
                </div>
                <h3><%= company.name %></h3>

                <img
                  src="/assets/icons/arrow.svg"
                  alt="arrow-icon"
                  class="arrow"
                />
              </a>
            </li>
            <% }); %>
          </ul>
        </div>
      </div>
    </main>

    <!-- copied to clipboard pop-up -->
    <div class="copied-message hidden">
      <div class="copied-content-container">
        <ul class="pop-up-nav">
          <li>
            <a href="ancorestrategy.com" target="_blank"
              ><img src="/assets/companys/ancoreLogo.svg" alt="ancore-icon"
            /></a>
          </li>
          <li><p>ANCORE strategy</p></li>
        </ul>
        <div>
          <h4>
            Contact-link has been Copied
            <img src="/assets/icons/check.svg" alt="checkmark-icon" />
          </h4>
          <p>http://localhost:5000/<%= member.id %></p>
        </div>
      </div>
    </div>
  </body>
</html>
